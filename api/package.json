{
    "name": "shopping-api",
    "version": "1.0.0",
    "description": "Shopping App API - Hono on Cloudflare Workers",
    "type": "module",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "wrangler d1 migrations apply shopping-db --local",
        "db:migrate:prod": "wrangler d1 migrations apply shopping-db --remote",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "hono": "^4.6.0",
        "@hono/zod-validator": "^0.4.0",
        "drizzle-orm": "^0.38.0",
        "zod": "^3.24.0",
        "jose": "^5.9.0",
        "nanoid": "^5.0.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241218.0",
        "drizzle-kit": "^0.30.0",
        "typescript": "^5.7.0",
        "wrangler": "^3.99.0"
    }
}